                        Console.WriteLine("<Continue");
                        Console.ReadLine().ToUpper();
                    if (Input == "CONTINUE")
                    { correct = 3; }
                    if (Input != "CONTINUE")
                    { correct = 0; }
                    do
                        Console.WriteLine("You look up to see two paths. One leading west to a forest, and one going east to the village which to you choose?")
                        Console.WriteLine("<Go West");
                        Console.WriteLine("Go East");
                        Console.ReadLine().ToUpper();
                    if (Input == "WEST")
                    { correct = 3; }
                    if (Input != "WEST")
                    { correct = 0; }
                    do
                        Console.Clear();
                        Console.WriteLine("You begin walking to the forrest. When you reach it you are greated by a kind elderly lady.");
                        Console.WriteLine("Old Lady 'Hello wonderer. I am an elderly lady in need of help. My home in the forrest has become over run with forrest imps. Please you must help me. I'll pay you 100 gold coins. It's all I have you see.");
                        Console.WriteLine("<Help?");
                        Console.WriteLine("<Ignore?");
                        Console.ReadLine().ToUpper();
                    if (Input == "HELP")
                    { correct = 3; }
                    if (Input != "HELP")
                    { correct = 0; }
                    //Help the old lady
                    do
                        Console.Clear();
                        Console.WriteLine("Old Lady 'Thank you wonderer and thank the heavens that you showed up");
