                        }
                        if (Input == "OPEN" && Inventory[0] != null)
                        {
                            do
                            {
                                Console.WriteLine("The key worked. Your chest is now open. You found your quarters key, a rusty old dager and a chard map.");
                                Inventory[0] = "Quarters Key, Rusty Old Dager, Chard Map";
                                Console.WriteLine("< Back");
                                Input = Console.ReadLine().ToUpper();
                                if (Input == "BACK")
                                { correct = 1; }
                                if (Input != "BACK")
                                { correct = 0; }
                            } while (correct == 0);
                        }
                    } while (correct == 0);
                }

